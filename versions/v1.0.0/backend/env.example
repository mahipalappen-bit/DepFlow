# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/dependency-management
DB_NAME=dependency_management
MONGODB_URI=mongodb://localhost:27017/dependency-management

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX_REQUESTS=10

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=Dependency Management <noreply@company.com>

# External API Keys (for vulnerability scanning)
GITHUB_TOKEN=github_pat_your_token_here
NVD_API_KEY=your-nvd-api-key-here
SNYK_TOKEN=your-snyk-token-here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=application/json,text/plain,text/csv

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
HELMET_CSP=true

# Monitoring and Health Check
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Background Jobs
JOB_CONCURRENCY=5
JOB_DELAY=1000
VULNERABILITY_SCAN_CRON=0 2 * * *
DEPENDENCY_CHECK_CRON=0 */6 * * *

# External Service URLs
GITHUB_API_URL=https://api.github.com
NPM_REGISTRY_URL=https://registry.npmjs.org
PYPI_API_URL=https://pypi.org/pypi
MAVEN_CENTRAL_URL=https://search.maven.org/solrsearch/select

# Feature Flags
FEATURE_VULNERABILITY_SCANNING=true
FEATURE_AUTO_UPDATES=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SLACK_INTEGRATION=false
FEATURE_ADVANCED_ANALYTICS=true

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_DEFAULT_CHANNEL=#dependency-alerts

# Jira Integration (optional)
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=DEP

# Testing Configuration (for test environment)
TEST_DATABASE_URL=mongodb://localhost:27017/dependency-management-test
TEST_JWT_SECRET=test-jwt-secret
TEST_REDIS_URL=redis://localhost:6379/1

# Development Configuration
DEV_SEED_DATABASE=true
DEV_MOCK_EXTERNAL_APIS=true
DEV_LOG_SQL_QUERIES=false

# Production Configuration (for production environment)
PROD_SSL_CERT_PATH=/path/to/ssl/cert.pem
PROD_SSL_KEY_PATH=/path/to/ssl/key.pem
PROD_TRUST_PROXY=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Analytics and Reporting
ANALYTICS_RETENTION_DAYS=365
REPORT_EMAIL_RECIPIENTS=admin@company.com,manager@company.com
WEEKLY_REPORT_DAY=1


